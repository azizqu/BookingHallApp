
@model BookingHallAppDraft.Models.ViewModels.ReservationsViewModel
@{
    ViewBag.Title = "ReservationsAdd";
}

<h2>ReservationsAdd</h2>
@using (Html.BeginForm("Book", "Reservations"))
{
    @Html.ValidationSummary()
    <div class="form-group">        
        @* @Html.DropDownListFor(x=> x.ClientName, 
        new SelectList(Model.Clients, "ClientId", "Name"), "--Select Client--")*@
        
        @Html.LabelFor(m => m.ClientName.Name)
        @Html.TextBoxFor(m=>m.ClientName.Name)
    </div>
